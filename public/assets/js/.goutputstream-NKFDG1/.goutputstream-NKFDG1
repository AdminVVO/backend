function clickEvent(first, last) {
    if (first.value.length) {
        document.getElementById(last).focus();
    }
}

let bodyHtmlPg = document.querySelector(".page-category");
let containerLogin = document.querySelector(".container-welcome");
let modalLogin = document.querySelector(".modal-welcome");
let wrapperWelcome = document.querySelector(".content_hidden-welcome");
let wrapperNumber = document.querySelector(".content_hidden-number");

let contentWelcome = document.querySelector(".content_welcome");
let contentWelcomeEmail = document.querySelector(".content_welcome-email");
let contentNumber = document.querySelector(".content_number");
let contentEmail = document.querySelector(".content_email");
let contentOptions = document.querySelector(".content_options");
let contentOptionsEmail = document.querySelector(".content_options-email");
let contentConfirm = document.querySelector(".content_confirm");
let contentHelp = document.querySelector(".content_need");
let contentHelpEmail = document.querySelector(".content_need-email");
let contentSecurity = document.querySelector(".content_security");

let btnLogin = document.getElementById("butnLogin");
let btnPhone = document.querySelector("._btnPhone");
let btnEmail = document.querySelector("._btnEmail");
let btnEmailCode = document.querySelector(".btn_email-code");
let btn_X = document.querySelector(".close-x");
let btnNumber = document.querySelector(".btn-number");
let btnOptions = document.querySelector(".btn-options");
let btnOptionsEmail = document.querySelector(".btn-optionscode");
let btnResend = document.querySelector(".btn-resend");
let btnResendEmail = document.querySelector(".btn-resend-email");
let btnConfirm = document.getElementById("btn-confirm");
let btnConfirmEmail = document.querySelector(".btn-confirm-email");
let btnSecurity = document.querySelector(".btn-security");
let btnNeed = document.querySelector(".btn-help");
let btnNeedEmail = document.querySelector(".btn-help-email");
let btnBack = document.querySelector(".btn-back");
let btnBackEmail = document.querySelector(".btn-back-email");
let btnBackConfirm = document.querySelector(".btn_back-confirm");
let btnNext = document.querySelector(".btn_next");
let btnSubmit = document.querySelector(".btn-submit");
let btnSubmitEmail = document.querySelector(".btn-submit-email");




