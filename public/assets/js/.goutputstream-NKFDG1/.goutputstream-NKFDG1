btnLogin.onclick = (() => {
    containerLogin.style.display = "flex";
    contentWelcome.style.display = "grid";
    contentWelcomeEmail.style.display = "none";
    wrapperWelcome.style.display = "grid";
    bodyHtmlPg.style.overflow = "hidden";
    wrapperNumber.style.display = "none";
})

btnEmail.onclick = (() => {
    contentWelcome.style.display = "none";
    contentWelcomeEmail.style.display = "block";
})

btnPhone.onclick = (() => {
    contentWelcome.style.display = "block";
    contentWelcomeEmail.style.display = "none";
})

btn_X.onclick = (() => {
    wrapperWelcome.style.display = "block";
    contentWelcome.style.display = "block";
    contentWelcomeEmail.style.display = "none";
    contentNumber.style.display = "block";
    contentOptions.style.display = "block";
    contentConfirm.style.display = "block";
    contentHelp.style.display = "block";
    contentSecurity.style.display = "block";
    containerLogin.style.display = "none";
    bodyHtmlPg.style.overflow = "auto";
})

modalLogin.onclick = (() => {
    wrapperWelcome.style.display = "block";
    contentWelcome.style.display = "block";
    contentWelcomeEmail.style.display = "none";
    contentNumber.style.display = "block";
    contentOptions.style.display = "block";
    contentConfirm.style.display = "block";
    contentHelp.style.display = "block";
    contentSecurity.style.display = "block";
    containerLogin.style.display = "none";
    bodyHtmlPg.style.overflow = "auto";
})

btnNumber.onclick = (() => {
    wrapperNumber.style.display = "flex";
    wrapperNumber.style.margin = "auto";
    wrapperWelcome.style.display = "none";

    contentEmail.style.display = "none";
    contentOptions.style.display = "none";
    contentOptionsEmail.style.display = "none";
    contentConfirm.style.display = "none";
    contentHelp.style.display = "none";
    contentHelpEmail.style.display = "none";
    contentSecurity.style.display = "none";
});

btnEmailCode.onclick = (() => {
    wrapperWelcome.style.display = "none";
    wrapperNumber.style.display = "flex";

    contentEmail.style.display = "block";
    contentNumber.style.display = "none";
    contentOptions.style.display = "none";
    contentOptionsEmail.style.display = "none";
    contentConfirm.style.display = "none";
    contentHelp.style.display = "none";
    contentHelpEmail.style.display = "none";
    contentSecurity.style.display = "none";
});

btnOptions.onclick = (() => {
    contentOptions.style.display = "block";
    contentNumber.style.display = "none";
});

btnOptionsEmail.onclick = (() => {
    contentOptionsEmail.style.display = "block";
    contentEmail.style.display = "none";
})

btnResend.onclick = (() => {
    contentNumber.style.display = "block";
    contentOptions.style.display = "none";
});

btnResendEmail.onclick = (() => {
    contentEmail.style.display = "block";
    contentOptionsEmail.style.display = "none";
})

btnSecurity.onclick = (() => {
    contentSecurity.style.display = "block";
    contentConfirm.style.display = "none";
});

btnBackConfirm.onclick = (() => {
    contentConfirm.style.display = "block";
    contentSecurity.style.display = "none";
});

btnNeed.onclick = (() => {
    contentHelp.style.display = "block";
    contentOptions.style.display = "none";
    contentConfirm.style.display = "none";
});

btnNeedEmail.onclick = (() => {
    contentHelpEmail.style.display = "block";
    contentOptionsEmail.style.display = "none";
});

btnBack.onclick = (() => {
    contentOptions.style.display = "block";
    contentHelp.style.display = "none";
});

btnBackEmail.onclick = (() => {
    contentOptionsEmail.style.display = "block";
    contentHelpEmail.style.display = "none";
});



btnNext.onclick = (() => {
    wrapperWelcome.style.display = "block";
    contentNumber.style.display = "block";
    contentOptions.style.display = "block";
    contentConfirm.style.display = "block";
    contentHelp.style.display = "block";
    contentSecurity.style.display = "block";
    containerLogin.style.display = "none";
    bodyHtmlPg.style.overflow = "auto";
});

btnSubmit.onclick = (() => {
    wrapperWelcome.style.display = "block";
    contentNumber.style.display = "block";
    contentOptions.style.display = "block";
    contentConfirm.style.display = "block";
    contentHelp.style.display = "block";
    contentSecurity.style.display = "block";
    containerLogin.style.display = "none";
    bodyHtmlPg.style.overflow = "auto";
});

btnSubmitEmail.onclick = (() => {
    wrapperWelcome.style.display = "block";
    contentNumber.style.display = "block";
    contentOptions.style.display = "block";
    contentOptionsEmail.style.display = "block";
    contentConfirm.style.display = "block";
    contentHelp.style.display = "block";
    contentHelpEmail.style.display = "block";
    contentSecurity.style.display = "block";
    containerLogin.style.display = "none";
    bodyHtmlPg.style.overflow = "auto";
});

btnConfirm.onclick = (() => {
    wrapperWelcome.style.display = "block";
    contentNumber.style.display = "block";
    contentOptions.style.display = "block";
    contentOptionsEmail.style.display = "block";
    contentConfirm.style.display = "block";
    contentHelp.style.display = "block";
    contentSecurity.style.display = "block";
    containerLogin.style.display = "none";
    bodyHtmlPg.style.overflow = "auto";
})

btnConfirmEmail.onclick = (() => {
    wrapperWelcome.style.display = "block";
    contentNumber.style.display = "block";
    contentOptions.style.display = "block";
    contentOptionsEmail.style.display = "block";
    contentConfirm.style.display = "block";
    contentHelp.style.display = "block";
    contentSecurity.style.display = "block";
    containerLogin.style.display = "none";
    bodyHtmlPg.style.overflow = "auto";
})